# Server Configuration
PORT=8772
HOST=0.0.0.0

# Security
API_KEY_SECRET=change-this-secret-key-in-production
JWT_SECRET=change-this-jwt-secret-in-production

# Database
DATABASE_URL=sqlite:///./data.db

# CORS
CORS_ORIGINS=*

# Rate Limiting
RATE_LIMIT_FREE=10
RATE_LIMIT_STARTER=500
RATE_LIMIT_PRO=5000
RATE_LIMIT_ENTERPRISE=999999

# Logging
LOG_LEVEL=INFO

# External Services (optional)
SMTP_HOST=
SMTP_PORT=
GUMROAD_WEBHOOK_SECRET=

# Email Service Configuration
EMAIL_SERVICE=none  # Options: none, sendgrid, mailgun, smtp
FROM_EMAIL=noreply@yourapi.com
FROM_NAME=Your API Name

# SendGrid (if using EMAIL_SERVICE=sendgrid)
# SENDGRID_API_KEY=your_sendgrid_api_key

# Mailgun (if using EMAIL_SERVICE=mailgun)
# MAILGUN_DOMAIN=yourdomain.com
# MAILGUN_API_KEY=your_mailgun_api_key

# SMTP (if using EMAIL_SERVICE=smtp)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_TLS=true
